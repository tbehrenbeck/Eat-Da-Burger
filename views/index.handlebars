<div class="wrapper">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1 id="header">Shopping Cart</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 col-lg-3"></div>
        <div id="menu" class="col-sm-12 col-md-5 col-lg-3 text-center">
            <h2 id="buy">To Buy</h2>

            <ul>
                {{#each items}} {{#unless need}} {{> items/item-block need=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div id="eaten" class="col-sm-12 col-md-5 col-lg-3 text-center">
            <h2 id="bought">Bought</h2>

            <ul>
                {{#each items}} {{#if need}} {{> items/item-block need=false}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <form class="create-form">
                <p>
                    <span class="info">Enter an item you need and click submit to add it to your shopping cart</span>
                </p>
                <div class="form-group">
                    <label for="ca"></label>
                    <input type="text" id="ca" name="name">
                </div>

                <button id="submit" type="submit">Add Item</button>
            </form>
        </div>
    </div>
</div>